#include <bits/stdc++.h> 

vector<int> nextGreater(vector<int> &arr, int n) {
    // Write your code here
    stack<int> s;
    vector<int> ans(n, -1); // Initialize the answer vector with -1.

    for(int i = 0; i < n; i++) {
        while (!s.empty() && arr[i] > arr[s.top()]) {
            ans[s.top()] = arr[i];
            s.pop();
        }
        s.push(i);
    }

    return ans;
}
