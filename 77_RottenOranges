#include<bits/stdc++.h>
using namespace std;

int minTimeToRot(vector<vector<int>>& grid, int n, int m) {
    int ans = 0;
    queue<pair<int, int>> q;
    
    vector<pair<int, int>> adj = {{1,0},{-1,0},{0,1},{0,-1}};
    vector<vector<bool>> visited(n, vector<bool>(m, false));
    
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < m; j++) {
            if(grid[i][j] == 2) {
                q.push({i, j});
                visited[i][j] = true;
            }
        }
    }
    
    while(!q.empty()) {
        int size = q.size();
        
        for(int i = 0; i < size; i++) {
            auto pos = q.front();
            q.pop();
            
            for(auto change: adj) {
                int x = pos.first + change.first;
                int y = pos.second + change.second;
                
                if(x >= 0 && x < n && y >= 0 && y < m && grid[x][y] == 1 && !visited[x][y]) {
                    q.push({x, y});
                    visited[x][y] = true;
                    grid[x][y] = 2;
                }
            }
        }
        
        if(!q.empty()) {
            ans++;
        }
    }
    
    for(int i = 0; i < n; i++) {
        for(int j = 0; j < m; j++) {
            if(grid[i][j] == 1) {
                return -1;
            }
        }
    }
    
    return ans;
}
